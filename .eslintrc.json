{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module",
    "project": ["tsconfig.json"]
  },
  "extends": ["airbnb-typescript/base", "airbnb", "plugin:react/recommended", "plugin:react-hooks/recommended"],
  "plugins": ["react"],
  "rules": {
    "import/extensions": [
      "error",
      "always",
      {
          "pattern": {
              "jsx": "never",
              "tsx": "never"
          }
        }
   ],
    "react/react-in-jsx-scope": "off",
    "import/no-unresolved": "off",
    "no-shadow": "off",
    "linebreak-style": 0
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}
